import os
import tensorflow as tf
from tensorflow.keras.preprocessing.image import ImageDataGenerator
from tensorflow.keras.applications import mobilenet_v2
from tensorflow.keras.layers import GlobalAveragePooling2D, Dense, Dropout
from tensorflow.keras.models import Model
from tensorflow.keras.optimizers import Adam
from tensorflow.keras.callbacks import ModelCheckpoint, EarlyStopping, ReduceLROnPlateau

# Paths and Settings 
DATA_DIR   = r"C:\Users\malek\Desktop\grape_apple"
OUT_MODEL  = r"C:\Users\malek\Desktop\msf\G_A_mlnet.h5"
CLASSES_TXT= r"C:\Users\malek\Desktop\msf\G&A_mlnet.txt"

IMG_SIZE   = (224, 224)
BATCH_SIZE = 16
EPOCHS     = 13
SEED       = 42

print("Loading dataset from:", DATA_DIR)
if not os.path.exists(DATA_DIR):
    raise FileNotFoundError("DATA_DIR does not exist. Check the path.")

# Data Generators (MobileNetV2 preprocess)
datagen = ImageDataGenerator(
    preprocessing_function=mobilenet_v2.preprocess_input,
    validation_split=0.2,
    rotation_range=20,
    width_shift_range=0.1,
    height_shift_range=0.1,
    shear_range=0.1,
    zoom_range=0.15,
    horizontal_flip=True,
    fill_mode='nearest'
)

train_generator = datagen.flow_from_directory(
    DATA_DIR,
    target_size=IMG_SIZE,
    batch_size=BATCH_SIZE,
    class_mode='categorical',
    subset='training',
    shuffle=True,
    seed=SEED
)

val_generator = datagen.flow_from_directory(
    DATA_DIR,
    target_size=IMG_SIZE,
    batch_size=BATCH_SIZE,
    class_mode='categorical',
    subset='validation',
    shuffle=False
)

num_classes = train_generator.num_classes
print("Number of classes:", num_classes)
print("Class indices:", train_generator.class_indices)

# Save classes
with open(CLASSES_TXT, "w", encoding="utf-8") as f:
    for name, idx in sorted(train_generator.class_indices.items(), key=lambda x: x[1]):
        f.write(f"{idx}\t{name}\n")

print("Saved classes with indices to:", CLASSES_TXT)

# Build MobileNet_V2 
base_model = mobilenet_v2.MobileNetV2(
    weights="imagenet",
    include_top=False,
    input_shape=(IMG_SIZE[0], IMG_SIZE[1], 3)
)
base_model.trainable = False  

x = GlobalAveragePooling2D()(base_model.output)
x = Dropout(0.4)(x)
x = Dense(128, activation="relu")(x)
x = Dropout(0.3)(x)
outputs = Dense(num_classes, activation="softmax")(x)

model = Model(inputs=base_model.input, outputs=outputs)
model.compile(
    optimizer=Adam(1e-3),
    loss="categorical_crossentropy",
    metrics=["accuracy"]
)

model.summary()

# Callbacks 
ckpt   = ModelCheckpoint(OUT_MODEL, monitor="val_accuracy", save_best_only=True, verbose=1)
early  = EarlyStopping(monitor="val_accuracy", patience=3, restore_best_weights=True, verbose=1)
reduce = ReduceLROnPlateau(monitor="val_loss", factor=0.5, patience=2, verbose=1)

# Training 
print("\nTraining...")
history = model.fit(
    train_generator,
    validation_data=val_generator,
    epochs=EPOCHS,
    callbacks=[ckpt, early, reduce],
    verbose=2
)

print("Training finished.")
print("Best model saved to:", OUT_MODEL)
print("Classes file saved to:", CLASSES_TXT)
